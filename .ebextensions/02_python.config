container_commands:
    01_migrate:
        command: "source /opt/python/run/venv/bin/activate && python landoflei/landoflei/manage.py migrate --noinput"
        leader_only: true

    02_createsu:
        command: "source /opt/python/run/venv/bin/activate && python landoflei/landoflei/manage.py createsu"
        leader_only: true

    03_collectstatic:
        command: "source /opt/python/run/venv/bin/activate && python landoflei/landoflei/manage.py collectstatic --noinput"

option_settings:
  "aws:elasticbeanstalk:application:environment":
    DJANGO_SETTINGS_MODULE: "landoflei.settings"
    "PYTHONPATH": "/opt/python/current/app/landoflei:$PYTHONPATH"
    "ALLOWED_HOSTS": ".elasticbeanstalk.com"
  "aws:elasticbeanstalk:container:python":
    WSGIPath: landoflei/landoflei/wsgi.py
    NumProcesses: 3
    NumThreads: 20
  "aws:elasticbeanstalk:container:python:staticfiles":
    "/static/": "www/static/"